<% @tweets.each do |tweet| %>
  <% tweet.links.each do |link| %>
  	<script type="text/javascript"> 
	  getImage('<%= link %>', '<%= tweet.div_id %>');
  	</script>
  <% end %>
<% end %>

<ul class="unstyled">
<% @tweets.each do |tweet| %>
	<li class="row-fluid well well-small" >
		<img src="<%= tweet.profile_image_url%>" alt="bleh"/>
		<strong><%= tweet.from_user %></strong>
		<small class="pull-right"><%= tweet.created_at[0..-10] %></small><br/>
		<p><%= tweet.text %></p>
		<div id=<%= tweet.div_id %>>
			<% tweet.twitter_images.each do |img| %>
				<img src="<%= img %>" alt="bleh"/>
			<% end %>
		 </div>
		<br/>
	</li>
<% end %>
</ul>